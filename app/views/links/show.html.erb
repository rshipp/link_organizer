<% if @link.title.present? %>
  <%= content_for :title, @link.title + " | #{url_domain(@link.url)}"%>
<% else %>
  <%= content_for :title, @link.url %>
<% end %>

<%= render @link %>

<div>
  <% if current_user&.admin %>
    <%= link_to "Edit this link", edit_link_path(@link) %> |
  <% end %>
  <%= link_to "View all links", links_path %>
</div>

<% if current_user&.admin %>
  <div>
    <br/>
    <%= button_to "Destroy this link", @link, method: :delete, class: 'btn-danger', form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
<% end %>
